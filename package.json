{
  "name": "vite-demo",
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "commit": "git-cz",
    "release": "standard-version",
    "release:first": "standard-version -r 1.0.0"

  },
  "dependencies": {
    "@vitejs/plugin-vue": "^1.9.4",
    "axios": "^0.24.0",
    "vue": "^3.2.16",
    "vue-router": "^4.0.12",
    "vuex": "^4.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@vue/eslint-config-prettier": "^6.0.0",
    "autoprefixer": "^10.4.0",
    "babel-eslint": "^10.1.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.0.3",
    "husky": "^4.3.0",
    "naive-ui": "^2.20.1",
    "postcss": "^8.3.11",
    "prettier": "^2.4.1",
    "sass": "^1.43.4",
    "standard-version": "^9.3.2",
    "typescript": "^3.9.7",
    "vite": "^2.6.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*.{js,css,vue,jsx,tsx,ts}": [
      "prettier --write",
      "git add"
    ]
  },
  "standard-version": {}
}
